using System;
using System.Collections.Generic;

namespace Proyecto_POO
{
	/// <summary>
	/// Description of Banco.
	/// </summary>
	public class Banco
	{
		private string nombre;
		private List<Cuenta> ListaCuentas;
		private List<Cliente> ListaClientes;
		
		public Banco(string nombre)
		{
			this.nombre = nombre;
			this.ListaCuentas = new List<Cuenta>();
			this.ListaClientes = new List<Cliente>();
		}
		
		public string Nombre 
		{
			get {return this.nombre;}
		}
		
		public List<Cuenta> listaCuentas
		{
			get {return ListaCuentas;}
		}
			
		public List<Cliente> listaClientes
		{
			get {return ListaClientes;}
		}
		
		public void AgregarCuenta(Cuenta p){
			ListaCuentas.Add(p);
		}
		
		public void AgregarCliente(Cliente d){
			ListaClientes.Add(d);
		}
		
		public void EliminarCuentas(Cuenta p){
			ListaCuentas.Remove(p);
		}
		
		public void EliminarClientes(Cliente d){
			ListaClientes.Remove(d);
		}
		
		public int CantidadCuentas(){
			return ListaCuentas.Count;
		}
		
		public int CantidadClientes(){
			return ListaClientes.Count;
		}
		
		public Cuenta VerCuentas(int p){
			return ListaCuentas[p];                    
		}
		public Cliente VerCliente(int d){
			return ListaClientes[d];
		}
		public bool ExisteCuenta(Cuenta p){ 
			return ListaCuentas.Contains(p);
		}
		
		public bool ExisteCliente(Cliente d){
			return ListaClientes.Contains(d);
		}
		
	}
}
