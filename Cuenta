using System;
using System.Collections.Generic;

namespace Proyecto_POO
{
	/// <summary>
	/// Description of Cuenta.
	/// </summary>
	public class Cuenta
	{
		private string numero;
		private string apellido;
		private string dni;
		private double saldo;
		private static int cont = 0;
		
		public string Numero
		{
			get {return numero;}
			set {numero = value;}
		}
		public string Apellido
		{
			get {return apellido;}
			set {apellido = value;}
		}
		public string Dni
		{
			get {return dni;}
			set {dni = value;}
		}
		public double Saldo
		{
			get {return saldo;}
			set {saldo = value;}
		}
		
		public Cuenta(string numero, string apellido, string dni, double saldo)
		{
			this.numero = numero;
			this.apellido = apellido;
			this.dni = dni;
			this.saldo = saldo;
			cont++;
		}
		
		public void DepositarSaldo(double P)
		{
			saldo += P;
			Console.WriteLine("Deposito exitoso");
		}
		
		public void ExtraerSaldo(double P)
		{
			if (this.saldo >= P)
			{
			saldo -= P;
			
			Console.WriteLine("Extracci√≥n exitosa");
			}
			else
			{
				//throw new ExceptionSaldo("No hay saldo suficiente como para esa extraccion");
			}
		}
		
		public int ContarCuentas(){
			return cont;
		}
		//hacer metodo para contar cantidad de cuentas
		
		public void MostrarDatosP()
		{
			Console.WriteLine("\nNumero de cuenta: {0}  \nApellido de propietario: {1} \nDni del propietario: {2} \nSaldo: ${3}\n---------", numero, apellido, dni, saldo);
		}
	}
}
