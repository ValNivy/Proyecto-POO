using System;

namespace Proyecto_POO
{
	/// <summary>
	/// Description of Cuenta.
	/// </summary>
	public class Cuenta
	{
		private string numero;
		private string apellido;
		private string dni;
		private double saldo;
		
		public string Numero
		{
			get {return Numero;}
			set {numero = value;}
		}
		public string Apellido
		{
			get {return Apellido;}
			set {apellido = value;}
		}
		public string Dni
		{
			get {return Dni;}
			set {dni = value;}
		}
		public double Saldo
		{
			get {return Saldo;}
			set {saldo = value;}
		}
		
		public Cuenta(string numero, string apellido, string dni, double saldo)
		{
			this.numero = numero;
			this.apellido = apellido;
			this.dni = dni;
			this.saldo = saldo;
		}
		
		public void DepositarSaldo(double P){
			saldo += P;
			Console.WriteLine("Deposito exitoso");
		}
		
		public void ExtraerSaldo(double P){
			saldo -= P;
			Console.WriteLine("Extracci√≥n exitosa");
		}
		
	}
}
